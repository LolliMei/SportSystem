    printf("0.返回主界面  1.查看成绩  2.查看得分\n");
    printf("Which one do you want to choose?");
    scanf("%d",&VChoose);
    setbuf(stdin, NULL);
    while(VChoose<0 || VChoose>1){
        printf("输入错误，请重新输入:");
        scanf("%d",&VChoose);
        setbuf(stdin, NULL);
    }
    switch (VChoose) {
        case 0:
            StartInterface();
            break;
        case 1:
            CheckScore(3);
            break;
        case 2:
            CheckGoal(3);
            break;
        default:
            break;
    }
}

